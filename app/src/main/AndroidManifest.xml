<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hafidza.trashme">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />


    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="whateverString"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:appComponentFactory">
        <activity android:name="com.hafidza.trashme.activities.LoginPetugasActivity"></activity>
        <activity android:name="com.hafidza.trashme.activities.DetailTipsActivity" />
        <activity android:name="com.hafidza.trashme.activities.RegistrasiActivity" />
        <activity android:name="com.hafidza.trashme.activities.DetailsKreasiActivity" />
        <activity android:name="com.hafidza.trashme.activities.LoginActivity" />
        <activity android:name="com.hafidza.trashme.activities.JadwalActivity" />
        <activity android:name="com.hafidza.trashme.activities.TagihanActivity" />
        <activity android:name="com.hafidza.trashme.activities.KreasiActivity" />
        <activity android:name="com.hafidza.trashme.activities.TipsTrikActivity" />
        <activity
            android:name="com.hafidza.trashme.activities.PelanggaranActivity"
            android:label="@string/title_activity_pelanggaran"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.hafidza.trashme.activities.HomePetugasActivity"
            android:label="@string/title_activity_home2" />
        <activity
            android:name="com.hafidza.trashme.activities.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity android:name="com.hafidza.trashme.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hafidza.trashme.activities.WelcomeActivity" />
    </application>

</manifest>